@{
    ViewData["Title"] = "My Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb{
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <h3 class="text-themecolor">Home</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a asp-action="Index">Dashboard</a></li>

            </ol>
        </div>
        <div class="col-md-7 col-4 align-self-center">

        </div>
    </div>
}


<div class="col-md-4">
    <div class="card text-center">
        <div class="card-body">
            <p class="card-text"><i class="mdi mdi-file-document text-success" style="font-size:100px;"></i></p>
            <a href="#" class="btn btn-primary">Payroll</a>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="card text-center">
        <div class="card-body">
            <p class="card-text"><i class="mdi mdi-account-multiple text-success" style="font-size:100px;"></i></p>
            <a asp-action="Employee" asp-controller="Dashboard" class="btn btn-primary">HR Management</a>
        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="card text-center">
        <div class="card-body">
            <p class="card-text"><i class="mdi mdi-calendar-clock text-success" style="font-size:100px;"></i></p>
            <a href="#" class="btn btn-primary">Leave Management</a>
        </div>
    </div>
</div>
